  <div class="form-group form-md-line-input<%' has-error' unless @product.errors[:publish_at].blank? %>">
		<label class="col-md-2 control-label" for="form_control_1">Publish Time</label>
		<div class="col-md-6">
			<div class="input-group date form_datetime">
				<%= f.text_field :publish_at, value: datetime_value(@product.publish_at), class: "form-control#{' error' unless @product.errors[:publish_at].blank?}", size: 16, placeholder: 'Select Publish Time' %>	
				<span class="input-group-btn">
				<button class="btn default date-set" type="button"><i class="fa fa-calendar"></i></button>
				</span>
			</div>
			<!-- /input-group -->
		</div>
	</div>
  <div class="form-group form-md-line-input<%' has-error' unless @product.errors[:retract_at].blank? %>">
		<label class="col-md-2 control-label" for="form_control_1">Retract Time</label>
		<div class="col-md-6">
			<div class="input-group date form_datetime">
				<%= f.text_field :retract_at, value: datetime_value(@product.retract_at), class: "form-control#{' error' unless @product.errors[:retract_at].blank?}", size: 16, placeholder: 'Select Retract Time' %>	
				<span class="input-group-btn">
				<button class="btn default date-set" type="button"><i class="fa fa-calendar"></i></button>
				</span>
			</div>
			<!-- /input-group -->
		</div>
	</div>
	<div class="form-group form-md-line-input<%' has-error' unless @product.errors[:image].blank? %>">
		<label class="col-md-3 control-label" for="form_control_1">Image Upload</label>
 		<div class="col-md-5 fileinput fileinput-<%= @product.image.exists? ? 'exists' : 'new' %>" data-provides="fileinput">
			<div class="fileinput-<%= @product.image.exists? ? 'exists' : 'new' %> thumbnail">
			  <%= image_tag @product.image.url(:medium) %>
			</div>
<!--			<div class="fileinput-preview fileinput-<%= !@product.image.exists? ? 'exists' : 'new' %> thumbnail"></div> -->
			<div class="fileinput-previewimg fileinput-preview thumbnail" style="display:none;"></div>
      <div id="fileinput-noimage" class="fileinput-noimage thumbnail" style="display:none;">
			  <%= image_tag @product.image.options[:default_url] %>
			</div>
			<div>
				<span class="btn default btn-file">
  				<span class="fileinput-new fileinput-noimage">Select image </span>
  				<span class="fileinput-exists fileinput-preview">Change </span>
				  <%= f.file_field :image, as: :file, class: "form-control#{' error' unless @product.errors[:image].blank?}" %>
				</span>
				<a href="javascript:;" class="btn default fileinput-exists fileinput-preview" data-dismiss="fileinput">Remove </a>
			</div>
		</div>
	</div>
</div>
