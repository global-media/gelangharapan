    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Products
            <%= link_to 'Add Product', new_admin_store_product_url, class: "btn btn-primary pull-right" %>
            </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <!-- Hover Rows -->
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                  <%= form_tag  sort_admin_store_products_url, {role: 'form', method: 'post'} do |f| %>
                    <div class="table-responsive">
                        <table class="table table-hover sortable sorted_table">
                            <thead>
                                <tr>
                                    <th>Sort</th>
                                    <th>Main Image</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Base SKU</th>
                                    <th>Base Price</th>
                                    <th>Sale Price</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>                              
                                <% @products.each do |product| %>
                                <tr class="sort" id="<%= product.id %>">
                                    <%= hidden_field_tag "product[sort][#{product.id}][old]", product.sort %>
                                    <td><%= text_field_tag "product[sort][#{product.id}][new]", product.sort, class: 'form-control-size', placeholder: 'Sort #', size: 3, maxlength: 3 %></td>
                                    <td><%= image_tag product.main_image.url(:thumb) %></td>
                                    <td><%= product.name %></td>
                                    <td><%= product.description %></td>
                                    <td><%= product.base_sku %></td>
                                    <td><%= product.base_price %></td>
                                    <td><%= product.sale_price %></td>
                                    <td>
                                      <%= link_to 'Edit', edit_admin_store_product_url(id: product.id), class: "btn btn-warning" %>
                                      <%= link_to 'Delete', admin_store_product_url(id: product.id), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this product?" } %>
                                    </td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                    <div><%= button_tag 'Sort Products', type: 'submit', class: "btn btn-primary" %></div>
                    <!-- /.table-responsive -->
                    <% end %>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-6 -->
    </div>
    <!-- /.row -->
