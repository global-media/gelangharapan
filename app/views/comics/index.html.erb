    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Comics
            <%= link_to 'Add Comic', new_admin_contents_comic_url, class: "btn btn-primary pull-right" %>
            </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <!-- Hover Rows -->
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                  <%= form_tag  sort_admin_contents_comics_url, {role: 'form', method: 'post'} do |f| %>
                    <div class="table-responsive">
                        <table class="table table-hover sortable sorted_table">
                            <thead>
                                <tr>
                                    <th>Sort</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>                              
                                <% @comics.each do |comic| %>
                                <tr class="sort" id="<%= comic.id %>">
                                    <%= hidden_field_tag "comic[sort][#{comic.id}][old]", comic.sort %>
                                    <td><%= text_field_tag "comic[sort][#{comic.id}][new]", comic.sort, class: 'form-control-size', placeholder: 'Sort #', size: 3, maxlength: 3 %></td>
                                    <td><%= image_tag (comic.main_image || comic.image).url(:thumb) %></td>
                                    <td><%= comic.name %></td>
                                    <td><%= comic.description %></td>
                                    <td>
                                      <%= link_to 'Edit', edit_admin_contents_comic_url(id: comic.id), class: "btn btn-warning" %>
                                      <%= link_to 'Delete', admin_contents_comic_url(id: comic.id), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this comic?" } %>
                                      <%= link_to 'View Episodes', admin_contents_comic_episodes_url(comic_id: comic.id), class: "btn btn-primary" %>
                                    </td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                    <div><%= button_tag 'Sort Comic', type: 'submit', class: "btn btn-primary" %></div>
                    <!-- /.table-responsive -->
                    <% end %>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-6 -->
    </div>
    <!-- /.row -->
