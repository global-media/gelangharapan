        <div class="form-group">
            <label>Name</label>
            <%= f.text_field :name, class: "form-control#{' error' unless @comic.errors[:name].blank?}", placeholder: 'Name' %>
            <!--p class="help-block">Example block-level help text here.</p-->
        </div>
        <div class="form-group">
            <label>Description</label>
            <%= f.text_field :description, class: "form-control#{' error' unless @comic.errors[:description].blank?}", placeholder: 'Description' %>
            <!--p class="help-block">Example block-level help text here.</p-->
        </div>
        <div class="form-group">
            <label>Category</label>
            <%= f.select :category_id, category_options, {}, class: "form-control#{' error' unless @comic.errors[:category_id].blank?}" %>
        </div>
        <div class="form-group">
            <label>Publish Date</label>
            <%= f.date_field :publish_at, class: "form-control#{' error' unless @comic.errors[:publish_at].blank?}" %>
        </div>        
        <div class="form-group">
            <label>Retract Date</label>
            <%= f.date_field :retract_at, class: "form-control#{' error' unless @comic.errors[:retract_at].blank?}" %>
        </div>        
        <div class="form-group">
            <label>Image Upload</label>
            <%= f.file_field :image, as: :file, class: "form-control#{' error' unless @comic.errors[:image].blank?}" %>
        </div>        
        <% unless @comic.new_record? || !@comic.image.exists? %>
        <div class="form-group">
            <label>Image Tag</label>
            <%= image_tag @comic.image.url(:thumb) %>
        </div>
        <div class="form-group">
            <label>Image Tag</label>
            <%= image_tag @comic.image.url(:medium) %>
        </div>
        <div class="form-group">
            <label>Image Tag</label>
            <%= image_tag @comic.image.url %>
        </div>
        <% end %>
