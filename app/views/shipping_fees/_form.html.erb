<div class="form-body">
	<div class="form-group form-md-line-input<%' has-error' unless @shipping_fee.errors[:city].blank? %>">
		<label class="col-md-2 control-label" for="form_control_1">City</label>
		<div class="col-md-10">
      <%= f.text_field :city, class: "form-control#{' error' unless @shipping_fee.errors[:city].blank?}", placeholder: 'Enter City', id: 'form_control_1' %>			
      <div class="form-control-focus"></div>
		</div>
	</div>
	<div class="form-group form-md-line-input<%' has-error' unless @shipping_fee.errors[:fee].blank? %>">
		<label class="col-md-2 control-label" for="form_control_1">Fee</label>
		<div class="col-md-10">
		  <div class="input-group">  
  		  <span class="input-group-addon">IDR</span>
        <%= f.text_field :fee, class: "form-control#{' error' unless @shipping_fee.errors[:fee].blank?}", placeholder: 'Enter Fee', id: 'form_control_1', value: number_format(@shipping_fee.fee) %>
      </div>
      <div class="form-control-focus"></div>
		</div>
	</div>
</div>
  