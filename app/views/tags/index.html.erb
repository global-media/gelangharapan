    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Tags
            <%= link_to 'Add Tag', new_admin_tag_url, class: "btn btn-primary pull-right" %>
            </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <!-- Hover Rows -->
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                  <%= form_tag  sort_admin_tags_url, {role: 'form', method: 'post'} do |f| %>
                    <div class="table-responsive">
                        <table class="table table-hover sortable sorted_table">
                            <thead>
                                <tr>
                                    <th>Sort</th>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>                              
                                <% @tags.each do |tag| %>
                                <tr class="sort" id="<%= tag.id %>">
                                    <%= hidden_field_tag "tag[sort][#{tag.id}][old]", tag.sort %>
                                    <td><%= text_field_tag "tag[sort][#{tag.id}][new]", tag.sort, class: 'form-control-size', placeholder: 'Sort #', size: 3, maxlength: 3 %></td>
                                    <td><%= tag.name %></td>
                                    <td><%= tag.status_name %>
                                    <td>
                                      <%= link_to 'Edit', edit_admin_tag_url(id: tag.id), class: "btn btn-warning" %>
                                      <%= link_to 'Delete', admin_tag_url(id: tag.id), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this tag?" } %>
                                    </td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                    <div><%= button_tag 'Sort Tag', type: 'submit', class: "btn btn-primary" %></div>
                    <!-- /.table-responsive -->
                    <% end %>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-6 -->
    </div>
    <!-- /.row -->
