    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Orders
            </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <!-- Hover Rows -->
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                  <%= form_tag admin_store_orders_url, {role: 'form', method: 'post'} do |f| %>
                    <div class="table-responsive">
                        <table class="table table-hover sortable sorted_table">
                            <thead>
                                <tr>
                                    <th>Full Name</th>
                                    <th>Status</th>
                                    <th>Subtotal</th>
                                    <th>Tax</th>
                                    <th>Shipping</th>
                                    <th>Discount</th>
                                    <th>Total</th>
                                    <th>&nbsp;</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>                              
                                <% @orders.each do |order| %>
                                <tr class="sort" id="<%= order.id %>">
                                    <td><%= order.customer.full_name %></td>
                                    <td><%= order.status %></td>
                                    <td><%= order.subtotal %></td>
                                    <td><%= order.tax %></td>
                                    <td><%= order.shipping %></td>
                                    <td><%= order.discount %></td>
                                    <td><%= order.total %></td>
                                    <td>
                                      <%= link_to 'View', admin_store_order_url(id: order.id), class: "btn btn-warning" %>
                                      <% if order.opened? %>
                                        <%= link_to 'Process', process_admin_store_orders_url(id: order.id), class: "btn btn-primary", method: :post, data: { confirm: "Are you sure you want to process this order?" } %>
                                      <% else %>
                                        <%= link_to 'Revert', revert_admin_store_orders_url(id: order.id), class: "btn btn-primary", method: :post, data: { confirm: "Are you sure you want to revert this order?" } %>
                                      <% end %>
                                      <% unless order.cancelled? %>
                                        <%= link_to 'Cancel', cancel_admin_store_orders_url(id: order.id), class: "btn btn-danger", method: :post, data: { confirm: "Are you sure you want to cancel this order?" } %>
                                      <% end %>
                                    </td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                    <% end %>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-6 -->
    </div>
    <!-- /.row -->
