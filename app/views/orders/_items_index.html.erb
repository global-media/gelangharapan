<div class="col-lg-12">
    <h1 class="page-header">Order Items
    </h1>
</div>
<div class="panel-body">
    <div class="table-responsive">
        <table class="table table-hover sortable sorted_table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Option</th>
                    <th>SKU</th>
                    <th>Sold Price</th>
                    <th>Original Price</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>                              
                <% @order.items.each do |order_item| %>
                <tr class="sort" id="<%= order_item.id %>">
                    <td><%= order_item.product.name %></td>
                    <td><%= order_item.option %></td>
                    <td><%= order_item.sku %></td>
                    <td><%= order_item.sold_price %></td>
                    <td><%= order_item.original_price %></td>
                    <td><%= order_item.quantity %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <!-- /.table-responsive -->
</div>
<!-- /.panel-body -->