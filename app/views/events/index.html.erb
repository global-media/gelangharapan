    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Events
            <%= link_to 'Add Event', new_event_url, class: "btn btn-primary pull-right" %>
            </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <!-- Hover Rows -->
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-hover sortable sorted_table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Date</th>
                                    <th>Venues</th>
                                    <th>Description</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>                              
                                <% @events.each do |event| %>
                                <tr class="sort" id="<%= event.id %>">
                                    <td><%= event.name %></td>
                                    <td><%= event.date %></td>
                                    <td><%= event.venues %></td>
                                    <td><%= event.description %></td>
                                    <td>
                                      <%= link_to 'Edit', edit_event_url(id: event.id), class: "btn btn-warning" %>
                                      <%= link_to 'Delete', event, class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this event?" } %>
                                    </td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-6 -->
    </div>
    <!-- /.row -->
