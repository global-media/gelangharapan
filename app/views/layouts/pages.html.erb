    <script>
    var wordingVideo = $('.wording__video').css('height' , $('iframe').height());
    var iframeYoutube = $('iframe').height();
    var wording = $('.wording__video h3').height() + $('.wording__video h4').height() ;
    var total = iframeYoutube - wording
    var wordingP = $('.journey__content--3 p')

    if(window.width < 500){
    $('.wording__video').css('height' ,'auto');
    }

    $('.journey__content--3 p').each(function(){
    var p = $(this)
    var ini = $(this).height();
    var total = ini + wording

    if( total  > iframeYoutube) {
    p.next('.read__moore').show();
    }else{
    p.next('.read__moore').hide();
    }

    $('.read__moore').on('click',function(e){
      e.preventDefault();
    var $t = $(this);
    $t.closest('.wording__video').css('height' ,'auto');

     $(this).hide();
    });

    });



