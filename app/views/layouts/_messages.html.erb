<% if flash[:error] %>
  <div class="alert alert-danger">
		<%= flash[:error] %>
    <% unless @errors.blank? %>
      <% @errors.full_messages.each do |error_message| %>
        <li><%= error_message %></li>
      <% end if @errors.kind_of?(ActiveModel::Errors) %>
      <% @errors.each do |column, errors| %>
        <% errors.each do |error| %>
          <li><%= "#{column.capitalize} #{error}" %></li>
        <% end %>
      <% end if @errors.kind_of?(Hash) %>
    <% end %>
	</div>
<% end %>
<% if flash[:success] %>
	<!--div class="alert alert-danger display-hide"-->
	<div class="alert alert-success">
		<%= flash[:success] %>
	</div>
<% end %>
