    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">News
            <%= link_to 'Add News', new_news_url, class: "btn btn-primary pull-right" %>
            </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <!-- Hover Rows -->
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-hover sortable sorted_table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Title</th>
                                    <th>Author</th>
                                    <th>Photographer</th>
                                    <th>Description</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>                              
                                <% @news.each do |news| %>
                                <tr class="sort" id="<%= news.id %>">
                                    <td><%= image_tag news.image.url(:thumb) %></td>
                                    <td><%= news.title %></td>
                                    <td><%= news.author %></td>
                                    <td><%= news.photographer %></td>
                                    <td><%= news.description %></td>
                                    <td>
                                      <%= link_to 'Edit', edit_news_url(id: news.id), class: "btn btn-warning" %>
                                      <%= link_to 'Delete', news, class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this news?" } %>
                                    </td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-6 -->
    </div>
    <!-- /.row -->
