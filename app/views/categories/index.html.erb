    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Categories
            <%= link_to 'Add Category', new_category_url, class: "btn btn-primary pull-right" %>
            </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <!-- Hover Rows -->
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                  <%= form_tag  categories_sort_url, {role: 'form', method: 'post'} do |f| %>
                    <div class="table-responsive">
                        <table class="table table-hover sortable sorted_table">
                            <thead>
                                <tr>
                                    <th>Sort</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>                              
                                <% @categories.each do |category| %>
                                <tr class="sort" id="<%= category.id %>">
                                    <%= hidden_field_tag "category[sort][#{category.id}][old]", category.sort %>
                                    <td><%= text_field_tag "category[sort][#{category.id}][new]", category.sort, class: 'form-control-size', placeholder: 'Sort #', size: 3, maxlength: 3 %></td>
                                    <td><%= image_tag category.image.url(:thumb) %></td>
                                    <td><%= category.name %></td>
                                    <td>
                                      <%= link_to 'Edit', edit_category_url(id: category.id), class: "btn btn-warning" %>
                                      <%= link_to 'Delete', category, class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this category?" } %>
                                    </td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                    <div><%= button_tag 'Sort Category', type: 'submit', class: "btn btn-default" %></div>
                    <!-- /.table-responsive -->
                    <% end %>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-6 -->
    </div>
    <!-- /.row -->
