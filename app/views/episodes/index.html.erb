    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Episodes
            <%= link_to 'Add Episode', new_admin_contents_episode_url, class: "btn btn-primary pull-right" %>
            </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <!-- Hover Rows -->
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                  <%= form_tag  sort_admin_contents_comic_episodes_url, {role: 'form', method: 'post'} do |f| %>
                    <div class="table-responsive">
                        <table class="table table-hover sortable sorted_table">
                            <thead>
                                <tr>
                                    <th>Sort</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Details</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>                              
                                <% @episodes.each do |episode| %>
                                <tr class="sort" id="<%= episode.id %>">
                                    <%= hidden_field_tag "episode[sort][#{episode.id}][old]", episode.sort %>
                                    <td><%= text_field_tag "episode[sort][#{episode.id}][new]", episode.sort, class: 'form-control-size', placeholder: 'Sort #', size: 3, maxlength: 3 %></td>
                                    <td><%= image_tag (episode.main_image || episode.image).url(:thumb) %></td>
                                    <td><%= episode.name %></td>
                                    <td><%= episode.details %></td>
                                    <td>
                                      <%= link_to 'Edit', edit_admin_contents_episode_url(id: episode.id), class: "btn btn-warning" %>
                                      <%= link_to 'Delete', admin_contents_episode_url(id: episode.id), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this episode?" } %>
                                    </td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                    <div><%= button_tag 'Sort Episode', type: 'submit', class: "btn btn-primary" %></div>
                    <!-- /.table-responsive -->
                    <% end %>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-6 -->
    </div>
    <!-- /.row -->
