        </div>
        <div class="form-group">
            <label>Image Tag</label>
            <%= image_tag @episode.image.url(:medium) %>
        </div>
        <div class="form-group">
            <label>Image Tag</label>
            <%= image_tag @episode.image.url %>
        </div>
        <% end %>