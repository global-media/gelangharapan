    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Collections
            <%= link_to 'Add Collection', new_admin_store_collection_url, class: "btn btn-primary pull-right" %>
            </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <!-- Hover Rows -->
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                  <%= form_tag  sort_admin_store_collections_url, {role: 'form', method: 'post'} do |f| %>
                    <div class="table-responsive">
                        <table class="table table-hover sortable sorted_table">
                            <thead>
                                <tr>
                                    <th>Sort</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>                              
                                <% @collections.each do |collection| %>
                                <tr class="sort" id="<%= collection.id %>">
                                    <%= hidden_field_tag "collection[sort][#{collection.id}][old]", collection.sort %>
                                    <td><%= text_field_tag "collection[sort][#{collection.id}][new]", collection.sort, class: 'form-control-size', placeholder: 'Sort #', size: 3, maxlength: 3 %></td>
                                    <td><%= image_tag collection.image.url(:thumb) %></td>
                                    <td><%= collection.name %></td>
                                    <td>
                                      <%= link_to 'Edit', edit_admin_store_collection_url(id: collection.id), class: "btn btn-warning" %>
                                      <%= link_to 'Delete', admin_store_collection_url(id: collection.id), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this collection?" } %>
                                    </td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                    <div><%= button_tag 'Sort Collection', type: 'submit', class: "btn btn-primary" %></div>
                    <!-- /.table-responsive -->
                    <% end %>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-6 -->
    </div>
    <!-- /.row -->
